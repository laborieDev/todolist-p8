{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('task_create')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}

        <a href="{{ path('task_list', {'isDone': 0}) }}" class="btn btn-primary">Retour à la liste des tâches en cours</a>
        <a href="{{ path('task_list', {'isDone': 1}) }}" class="btn btn-primary">Retour à la liste des tâches réalisés</a>
    </div>
{% endblock %}
